<!DOCTYPE html>
<html>
  <head>
    <title>Remembertheeggs</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.3.1/css/foundation.min.css" integrity="sha256-itWEYdFWzZPBG78bJOOiQIn06QCgN/F0wMDcC4nOhxY=" crossorigin="anonymous" />
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="top-bar">
      <div class="top-bar-left">
        <ul class="menu">
          <li class="menu-text">Remember the Eggs!</li>
        </ul>
      </div>
      <div class="top-bar-right">
        <ul class="menu">
          <% if user_signed_in? %>
            <li> <%= link_to 'Sign Out', destroy_user_session_path, class: 'button' %> </li>
          <% else %>
            <li> <%= link_to 'Sign In', new_user_session_path, class: 'button' %> </li>
            <li> <%= link_to 'Sign Up', new_user_registration_path, class: 'button' %> </li>
          <% end %>
        </ul>
      </div>
    </div>
    <%= yield %>
    <div id='app' />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.3.1/js/foundation.min.js" integrity="sha256-Nd2xznOkrE9HkrAMi4xWy/hXkQraXioBg9iYsBrcFrs=" crossorigin="anonymous"></script>
  </body>
</html>
